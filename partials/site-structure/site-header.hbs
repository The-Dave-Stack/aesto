<header id="it-head" class="it-head">
    <nav class="it-head-inner it-container">
        <div class="it-head-brand">
            <h1>
                <a class="it-head-logo" href="{{@site.url}}">
                    {{#if @site.logo}}
                        <img src="{{@site.logo}}" alt="{{@site.title}}" />
                    {{else}}
                        {{@site.title}}
                    {{/if}}
                </a>
            </h1>
            <a class="it-burger" role="button">
                <div class="it-burger-box">
                    <div class="it-burger-inner"></div>
                </div>
            </a>
        </div>
        <div class="it-head-menu">
            {{navigation}}
        </div>
        <div class="it-head-actions">
            <div class="it-head-actions-list">
                	{{#if @member}}
                		<a class="account-link" href="{{@site.url}}/account/" {{#if @custom.use_portal_links}} data-portal="account"{{/if}}title="{{t "Account"}}" >{{t "Account"}}</a>
                		<a class="sign-out" href="#signout" data-members-signout>{{t "Sign out"}}</a>
                	{{else}}
                		<a class="signin-link" href="{{@site.url}}/signin/" {{#if @custom.use_portal_links}} data-portal="signin"{{/if}}>{{t "Signin"}}</a>
                	    <a class="signup-link" href="{{@site.url}}/signup/"{{#if @custom.use_portal_links}} data-portal="signup"{{/if}}>{{t "Signup"}}</a>
                	{{/if}}
                <a class="search-link" href=":javascript" title="{{t "Search"}}" aria-label="{{t "Search"}}" data-ghost-search>{{> "icons/search"}}</a>
                <div class="it-dark-light">
                    <div class="icon-dark">
                        {{> icons/light}}
                    </div>
                    <div class="icon-light">
                        {{> icons/dark}}
                    </div>
                </div>
                {{#if @custom.language_dropdown}}
                    <div class="language-selector">
                        <select id="language-dropdown" onchange="changeLanguage(this.value)">
                            {{#if @custom.enable_en_language}}
                                <option value="en" data-url="https://en.thedavestack.com">ðŸ‡ºðŸ‡¸ {{t "English"}}</option>
                            {{/if}}
                            {{#if @custom.enable_es_language}}
                                <option value="es" data-url="https://es.thedavestack.com">ðŸ‡ªðŸ‡¸ {{t "Spanish"}}</option>
                            {{/if}}
                            {{#if @custom.enable_zh_language}}
                                <option value="zh" data-url="https://zh.thedavestack.com">ðŸ‡¨ðŸ‡³ {{t "Chinese"}}</option>
                            {{/if}}
                        </select>
                    </div>
                {{/if}}
            </div>
        </div>
    </nav>
</header>

