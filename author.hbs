{{!< default}}

<div class="it-page">
    <div class="it-container">

        {{#author}}
            <header class="it-header it-canvas">
                {{#if cover_image}}
    	            <figure class="it-feature-image-wrapper">
    	                 {{>image picture_type="author-cover" card=false from_author=true}}
    	            </figure>
    	        {{/if}}
    	        <div class="it-author-image">
    	            {{#if profile_image}}
                        <img class="it-avatar-wrapper" style="max-width: fit-content;" src="{{profile_image}}" alt="{{name}}" />
                    {{else}}
                        {{> "icons/user"}} {{!-- partials/icons/user.hbs --}}
                    {{/if}}
    	        </div>
                <h1 class="it-title">{{name}}</h1>
                {{#if bio}}
                    <p class="it-excerpt">{{bio}}</p>
                {{/if}}
    
                <div class="it-author-meta">
                    <div class="it-author-links">
                        {{#if location}}
                            <a href="#" target="_blank" rel="noopener">{{> "icons/pin"}} {{location}}</a>
                        {{/if}}
                        {{#if website}}
                            <a href="{{website}}" target="_blank" rel="noopener">{{> "icons/link"}}</a>
                        {{/if}}
                        {{#if twitter}}
                            <a href="{{twitter_url}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
                        {{/if}}
                        {{#if facebook}}
                            <a href="{{facebook_url}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
                        {{/if}}
                        {{#if linkedin}}
                            <a href="{{linkedin_url}}" target="_blank" rel="noopener">{{> "icons/linkedin"}}</a>
                        {{/if}}
                        {{#if bluesky}}
                            <a href="{{bluesky_url}}" target="_blank" rel="noopener">{{> "icons/bluesky"}}</a>
                        {{/if}}
                        {{#if threads}}
                            <a href="{{threads_url}}" target="_blank" rel="noopener">{{> "icons/threads"}}</a>
                        {{/if}}
                        {{#if mastodon}}
                            <a href="{{mastodon_url}}" target="_blank" rel="noopener">{{> "icons/mastodon"}}</a>
                        {{/if}}
                        {{#if tiktok}}
                            <a href="{{tiktok_url}}" target="_blank" rel="noopener">{{> "icons/tiktok"}}</a>
                        {{/if}}
                        {{#if youtube}}
                            <a href="{{youtube_url}}" target="_blank" rel="noopener">{{> "icons/youtube"}}</a>
                        {{/if}}
                        {{#if instagram}}
                            <a href="{{instagram_url}}" target="_blank" rel="noopener">{{> "icons/instagram"}}</a>
                        {{/if}}
                    </div>
                </div>
            </header>
        {{/author}}

        <div class="it-postfeed it-grid-c3">
            {{> "loop"}} {{!-- partials/loop.hbs --}}
        </div>
        
        {{pagination}} {{!-- partials/pagination.hbs --}}

    </div>
</div>